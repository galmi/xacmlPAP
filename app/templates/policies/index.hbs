<div class="col-md-12">
    <h2>Policies list</h2>
    <div class="row">
        <div class="col-md-12">
            {{#link-to "policies.new" class="btn btn-default"}}<span class="glyphicon glyphicon-plus"></span> Add Policy{{/link-to}}
        </div>
    </div>
    {{#if model.length}}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each model as |policy|}}
                <tr>
                    <td>{{policy.id}}</td>
                    <td>{{policy.description}}</td>
                    <td>{{#link-to "policies.edit" policy class="glyphicon glyphicon-pencil"}}{{/link-to}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>