<div class="col-md-12">
    <h2>Rules list</h2>
    <div class="row">
        <div class="col-md-12">
            {{#link-to "rules.new" class="btn btn-default"}}<span class="glyphicon glyphicon-plus"></span> Add rule{{/link-to}}
        </div>
    </div>
    {{#if model.length}}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Effect</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each model as |rule|}}
                <tr>
                    <td>{{rule.id}}</td>
                    <td>{{rule.description}}</td>
                    <td>{{rule.effect}}</td>
                    <td>{{#link-to "rules.edit" rule class="glyphicon glyphicon-pencil"}}{{/link-to}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>