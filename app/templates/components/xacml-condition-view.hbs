{{#if condition}}
    {{#if condition.isFuncOr }}
        <div class="panel panel-default">
            <div class="panel-heading">Conditions</div>
            <div class="panel-body">
                <div class="col-md-12 tree-group">
                    <span>OR</span>
                    <ul class="list-tree">
                        {{#each condition.conditions as |childCondition|}}
                            <li>
                                {{xacml-condition-view condition=childCondition parentCondition=condition}}
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    {{else if condition.isFuncAnd }}
        <div class="row">
            <div class="col-md-12">
                <span>AND</span>
                <ul class="list-tree">
                    {{#each condition.conditions as |childCondition|}}
                        <li>
                            {{xacml-condition-view condition=childCondition parentCondition=condition}}
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{else }}
        <div class="row">
            <div class="col-md-12 form-inline">
                {{#if condition.firstExpression.attributeId}}
                    {{condition.firstExpression.attributeId}}
                {{/if}}
                &nbsp;
                {{condition.functionId}}
                &nbsp;
                {{#if condition.lastExpression.attributeId}}
                    {{condition.lastExpression.attributeId}}
                {{else if condition.lastExpression.value}}
                    {{condition.lastExpression.value}}
                {{/if}}
            </div>
        </div>
    {{/if}}
{{/if}}