<tr>
    <td>{{rule.id}}</td>
    <td>{{rule.description}}</td>
    <td>
        <button type="button" class="button btn btn-default btn-xs glyphicon glyphicon-remove pull-right" {{action "removeRule" parent rule}}></button>&nbsp;
        <button type="button" class="button btn btn-default btn-xs glyphicon glyphicon-pencil pull-right" {{action "editRule"}}></button>&nbsp;
        <button type="button" class="button btn btn-default btn-xs glyphicon glyphicon-eye-open pull-right" {{action "viewRule"}}></button>
    </td>
</tr>
{{#if isViewMode }}
    <tr>
        <td colspan="3">
            {{xacml-rule-view rule=rule}}
        </td>
    </tr>
{{/if}}
{{#if isEditMode }}
    <tr>
        <td colspan="3">
            {{xacml-rule-edit rule=rule}}
        </td>
    </tr>
{{/if}}
