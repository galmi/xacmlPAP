<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">Policy</div>
        <div class="panel-body">
            <div class="form-horizontal col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Descrition</label>
                    <div class="col-sm-10">
                        {{input value=policy.description class="form-control" placeholder="Description"}}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Rule combining algorithm</label>
                    <div class="col-sm-10">
                        {{input value=policy.ruleCombiningAlgorithm class="form-control" placeholder="Rule combining algorithm"}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{xacml-target target=policy.target}}
                </div>
            </div>
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Rules <button type="button" class="button btn btn-default glyphicon-plus"></button></div>
                    <div class="panel-body">
                        {{#each policy.rules as |rule|}}
                            {{xacml-rule rule=rule}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
