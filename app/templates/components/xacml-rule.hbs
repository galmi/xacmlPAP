<div class="row form-group">
    <div class="form-horizontal col-md-12">
        <div class="form-group">
            <label class="col-sm-1 control-label">Effect</label>
            <div class="col-sm-11">
                {{xacml-effect-select value=rule.effect}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">Description</label>
            <div class="col-sm-11">
                {{input value=rule.description class="form-control" placeholder="Description"}}
            </div>
        </div>
    </div>
</div>
<div class="row form-group">
    <div class="col-md-12">
        {{#if rule.target }}
            {{xacml-target target=rule.target parent=rule}}
        {{ else }}
            <button type="button" class="btn btn-default" {{action "addTarget" rule}}><span
                    class="glyphicon glyphicon-plus"></span> Add Target
            </button>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{#if rule.condition}}
            {{xacml-condition condition=rule.condition parent=rule}}
        {{else }}
            <button type="button" class="btn btn-default" {{action "addConditionAttribute" rule}}><span
                    class="glyphicon glyphicon-plus"></span> Add Conditions
            </button>
        {{/if}}
    </div>
</div>
