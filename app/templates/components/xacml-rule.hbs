<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">Rule: {{rule.description}}
            <button type="button"
                    class="button btn btn-default btn-xs glyphicon glyphicon-chevron-up pull-right"></button>
            &nbsp;
            <button type="button" class="button btn btn-default btn-xs glyphicon glyphicon-minus pull-right"></button>
        </div>
        <div class="panel-body">
            <div class="form-horizontal col-md-12">
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" checked="{{rule.isPermit}}"> Permited
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">Descrition</label>
                    <div class="col-sm-11">
                        {{input value=rule.description class="form-control" placeholder="Description"}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{#if rule.target }}
                        {{xacml-target target=rule.target}}
                    {{ else }}
                        <div class="col-md-12">
                            <button type="button" class="btn btn-default" {{action "addTarget" rule}}><span
                                    class="glyphicon glyphicon-plus"></span> Add Target
                            </button>
                        </div>
                    {{/if}}
                </div>
            </div>
            <div class="col-md-12">
                {{#if rule.condition}}
                    {{xacml-condition condition=rule.condition}}
                {{else }}
                    <button type="button" class="btn btn-default" {{action "addConditionAttribute" rule}}><span
                            class="glyphicon glyphicon-plus"></span> Add Conditions
                    </button>
                {{/if}}
            </div>
        </div>
    </div>
</div>
