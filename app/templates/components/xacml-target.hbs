<div class="panel panel-default">
    <div class="panel-heading">Target
        <button type="button"
                class="button btn btn-default btn-xs glyphicon glyphicon-remove pull-right" {{action "removeTarget" parent}}></button>
    </div>
    <div class="panel-body">
        <div class="col-md-12 tree-group">
            {{#if target}}
                <span>OR</span>
                <button class="btn btn-default btn-xs glyphicon glyphicon-plus" {{action "addTargetAnyOf" target}}></button>
                <ul class="list-tree">
                    {{#each target.targetAnyOf as |targetAnyOf|}}
                        <li>
                            {{xacml-target-any-of model=targetAnyOf target=target}}
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    </div>
</div>
